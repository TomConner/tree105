http:// {
	redir https://{host}{uri}
}

https://dev.troop105treedrive.com {
	# Handle API calls
	handle /api/* {
		reverse_proxy tree105-server-1:4242
	}

	# Handle well-known files (e.g., for SSL)
	handle /.well-known/* {
		root * /tree105/public
		file_server
	}

	# Handle the SPA
	handle /* {
		root * /tree105/public
		try_files {path} {path}/index.html
		file_server
	}
}
