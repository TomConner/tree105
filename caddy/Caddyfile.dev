http:// {
	redir https://{host}{uri}
}

# This is Dev.
# Do not redirect from www
#

dev.troop105treedrive.com {
	# Handle API calls
	handle /api/* {
		reverse_proxy tree105-server-1:4242
	}

	# Serve the React app
	#handle /app/* {
	# reverse_proxy tree105-app-1:3000
	#}

	# Serve well-known files with `browse` enabled
	handle /.well-known/* {
		root * /public
		file_server browse
	}

	# Serve static files
	handle /* {
		root * /public
		try_files {path} {path}/index.html
		file_server
	}

	# Serve all other static files
	#file_server /* {
	#    root /public
	#}
}
